.container {
  min-height: 100vh;
  background: var(--background);
  padding-bottom: env(safe-area-inset-bottom);
}

.user-info {
  background: linear-gradient(135deg, #0066ff 0%, #5b9eff 100%);
  padding: 120rpx 40rpx 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.user-info::before,
.user-info::after {
  content: "";
  position: absolute;
  background: linear-gradient(
    rgba(255, 255, 255, 0.1),
    rgba(255, 255, 255, 0.05)
  );
  border-radius: 50%;
  filter: blur(30rpx);
}

.user-info::before {
  width: 120%;
  height: 120%;
  top: -60%;
  left: -10%;
  transform: rotate(-15deg);
}

.user-info::after {
  width: 140%;
  height: 120%;
  bottom: -60%;
  right: -20%;
  transform: rotate(15deg);
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 8rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 36rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
  background: #fff;
}

.avatar:active {
  transform: scale(0.95) translateY(4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 1;
}

.login-btn {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  margin-top: 24rpx;
  transition: var(--transition);
}

.login-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.1);
}

.statistics {
  margin: -145rpx 20rpx 24rpx;
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
}

.stat-item {
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  text-align: center;
}

.stat-item:not(:last-child)::after {
  content: "";
  position: absolute;
  right: 0;
  top: 15%;
  height: 70%;
  width: 1px;
  background: rgba(0, 0, 0, 0.08);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  font-feature-settings: "tnum";
  line-height: 1.2;
  width: 100%;
  text-align: center;
}

.stat-value.long {
  font-size: 36rpx;
}

.stat-value.very-long {
  font-size: 32rpx;
  letter-spacing: -1rpx;
}

.stat-value.money {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
}

.stat-value.money::before {
  content: "¬•";
  font-size: 0.7em;
  margin-right: 2rpx;
  opacity: 0.9;
  font-weight: 500;
}

.stat-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
  letter-spacing: 1rpx;
  margin-top: 8rpx;
  width: 100%;
  text-align: center;
}

.menu-list,
.menu-item,
.menu-text,
.menu-icon,
.menu-arrow {
  display: none;
}

.version {
  text-align: center;
  padding: 32rpx 0 48rpx;
  color: var(--text-tertiary);
  font-size: 24rpx;
  font-weight: 500;
  margin-top: auto;
}

