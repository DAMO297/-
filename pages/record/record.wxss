.container {
  padding: 24rpx;
  min-height: 100vh;
  background: var(--background);
}

/* 统计卡片区域 */
.stats-cards {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 24rpx;
  margin: -24rpx -24rpx 24rpx;
  background: linear-gradient(
    135deg,
    var(--primary-color) 0%,
    var(--secondary-color) 100%
  );
  position: relative;
  overflow: hidden;
}

.stats-cards::after {
  content: "";
  position: absolute;
  bottom: -60%;
  left: -20%;
  width: 140%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: rotate(-5deg);
}

.stat-card {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 20rpx;
  color: #fff;
  animation: slideUp 0.5s ease-out;
  animation-fill-mode: both;
}

.stat-card:nth-child(2) {
  animation-delay: 0.1s;
}

.stat-card:nth-child(3) {
  animation-delay: 0.2s;
}

.stat-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  animation: floatIcon 3s ease-in-out infinite;
}

.stat-value {
  font-size: 40rpx; /* 默认大小 */
  font-weight: 600;
  margin-bottom: 8rpx;
  font-feature-settings: "tnum";
  transition: all 0.3s ease;
}

.stat-value.long {
  /* 4-5位数 */
  font-size: 36rpx;
}

.stat-value.very-long {
  /* 6位数及以上 */
  font-size: 32rpx;
  letter-spacing: -1rpx;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 记录列表区域 */
.records-section {
  background: var(--card-background);
  border-radius: 32rpx 32rpx 0 0;
  margin: 0 -24rpx;
  padding: 40rpx 24rpx;
  min-height: 65vh;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx; /* 增加标题下方间距 */
  padding: 0 24rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: "";
  width: 8rpx;
  height: 36rpx;
  background: var(--primary-color);
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.records-list {
  padding: 0 24rpx;
}

.record-card {
  background: var(--background);
  border-radius: 24rpx;
  padding: 50rpx; /* 增加内边距 */
  margin-bottom: 20rpx; /* 增加卡片间距 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid rgba(0, 0, 0, 0.03);
  animation: fadeIn 0.5s ease-out;
  transition: var(--transition);
}

.record-card:active {
  transform: scale(0.98);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.03);
  gap: 40rpx;  /* 增加时间和奖励之间的间距 */
}

.record-date {
  font-size: 35rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  flex-shrink: 0;  /* 防止日期被压缩 */
}

.record-date::before {
  content: "📅";
  margin-right: 8rpx;
  font-size: 32rpx;
}

.record-time {
  color: var(--text-tertiary);
  font-size: 32rpx;
  font-feature-settings: "tnum";
  flex-shrink: 0;  /* 防止时间被压缩 */
}

/* 确保时间和日期在一行显示 */
.date-time-group {
  display: flex;
  align-items: center;
  gap: 24rpx;  /* 日期和时间之间的间距 */
  flex-shrink: 0;
}

.record-content {
  display: flex;
  flex-direction: column;
  gap: 28rpx; /* 增加内容元素间距 */
  padding: 12rpx 0;
}

.practice-time {
  font-size: 32rpx;
  color: var(--text-primary);
  font-weight: 500;
  display: flex;
  align-items: center;
  font-feature-settings: "tnum";
  white-space: nowrap;
}

.practice-time::before {
  content: "⏱️";
  margin-right: 12rpx;
  font-size: 36rpx;
}

.record-note {
  font-size: 28rpx;
  color: var(--text-tertiary);
  line-height: 1.6; /* 增加行高 */
  padding: 16rpx 24rpx; /* 增加内边距 */
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  display: flex;
  align-items: flex-start;
}

.record-note::before {
  content: "📝";
  margin-right: 8rpx;
  font-size: 32rpx;
}

.no-records {
  text-align: center;
  padding: 100rpx 0; /* 增加空状态上下间距 */
  color: var(--text-tertiary);
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.no-records::before {
  content: "📋";
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

/* 动画 */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes floatIcon {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-6rpx);
  }
}

/* 移除奖励相关样式 */
.reward-box,
.reward-label,
.reward-value {
  display: none;
}

/* 调整表单布局 */
.form-group {
  margin-bottom: 32rpx;
}

.input-group {
  margin-bottom: 24rpx;
}

.input {
  background: var(--background);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  width: 100%;
  box-sizing: border-box;
}

.textarea {
  background: var(--background);
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  height: 200rpx;
  color: var(--text-primary);
  box-sizing: border-box;
}

/* 优化打卡按钮 */
.punch-btn {
  margin-top: 40rpx; /* 增加与上方内容的间距 */
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 40rpx;
  font-weight: 500;
  transition: var(--transition);
  width: 100%;
  text-align: center;
}

.punch-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.punch-btn.disabled {
  background: #ccc;
  opacity: 0.8;
}

.record-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 16rpx;
}

.practice-time,
.reward {
  font-feature-settings: "tnum";
  white-space: nowrap;
}

.export-btn {
  background: var(--primary-color);
  color: #fff;
  font-size: 32rpx;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  margin: 20rpx 0;
  text-align: center;
  transition: all 0.3s;
}

.export-btn:active {
  transform: scale(0.95);
}
