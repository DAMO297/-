.rank-number {
  width: 48rpx;
  height: 48rpx;
  background: var(--primary-color);
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.rank-info {
  flex: 1;
  min-width: 0;
}

.user-name {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.rank-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.rank-stats .stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.rank-stats .label {
  color: var(--text-tertiary);
  margin-right: 8rpx;
}

.rank-stats .value {
  color: var(--primary-color);
  font-weight: 500;
}

