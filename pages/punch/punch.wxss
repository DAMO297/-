.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 999;
}

.login-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 85%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 32rpx;
  overflow: hidden;
  transform: scale(0.9);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.12);
}

.login-modal.show .modal-content {
  transform: scale(1);
}

.modal-header {
  padding: 32rpx;
  text-align: center;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.modal-body {
  padding: 32rpx;
}

.input-item {
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  background: var(--background);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
}

.input-item .icon {
  font-size: 36rpx;
  margin-right: 16rpx;
  color: var(--text-tertiary);
}

.login-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.modal-footer {
  padding: 32rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.btn {
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 44rpx;
  transition: var(--transition);
}

.btn.confirm {
  background: var(--primary-color);
  color: #fff;
  font-weight: 500;
}

.btn.confirm:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.switch-action {
