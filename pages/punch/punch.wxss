.ranking-card {
  margin: 32rpx 20rpx;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.ranking-title {
  padding: 32rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  text-align: center;
}

.title-text {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  position: relative;
  display: inline-block;
}

