.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #f8f9fb 100%);
  padding: 32rpx;
}

.punch-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  margin: 0 -25rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.08);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.5);
  animation: slideUp 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-header {
  text-align: center;
  margin-bottom: 48rpx;
  animation: fadeIn 0.6s ease-out;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  display: block;
  letter-spacing: 1rpx;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-tertiary);
  opacity: 0.8;
}

.form-group {
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
  animation-delay: 0.1s;
}

.input-group {
  margin-bottom: 32rpx;
}

.label {
  font-size: 30rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.label::before {
  content: '‚è±Ô∏è';
  margin-right: 12rpx;
  font-size: 32rpx;
}

.input-group:nth-child(2) .label::before {
  content: 'üìù';
}

.input {
  background: #f5f7fa;
  border-radius: 20rpx;
  padding: 24rpx 76rpx;
  font-size: 32rpx;
  color: var(--text-primary);
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
  min-height: 88rpx;
  line-height: 1.4;
  font-feature-settings: "tnum";
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.input:focus {
  background: #fff;
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.1);
}

.textarea {
  background: #f5f7fa;
  border-radius: 20rpx;
  padding: 28rpx 36rpx;
  font-size: 30rpx;
  width: 100%;
  height: 240rpx;
  color: var(--text-primary);
  box-sizing: border-box;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.textarea:focus {
  background: #fff;
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.1);
}

.punched-tip {
  text-align: center;
  padding: 60rpx 0;
  animation: fadeIn 0.6s ease-out;
}

.tip-text {
  font-size: 36rpx;
  color: var(--success-color);
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tip-text::before {
  content: '‚úÖ';
  margin-right: 12rpx;
  font-size: 40rpx;
}

.punch-btn {
  margin-top: 48rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, #5B9EFF 100%);
  color: #fff;
  font-size: 34rpx;
  padding: 24rpx;
  border-radius: 99rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  width: 100%;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.25);
  animation: fadeIn 0.6s ease-out;
  animation-delay: 0.2s;
}

.punch-btn::before {
  display: none;
}

.punch-btn:active {
  transform: scale(0.96) translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.2);
}

.punch-btn.disabled {
  background: linear-gradient(135deg, #ccc 0%, #ddd 100%);
  opacity: 0.8;
  box-shadow: none;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

